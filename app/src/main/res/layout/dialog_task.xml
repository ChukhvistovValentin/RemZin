<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="26dp">

        <ImageView
            android:id="@+id/btn_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/tilDialogTaskTime"
            android:layout_alignRight="@+id/tilDialogTaskTime"
            android:layout_alignTop="@+id/tilDialogTaskTitle"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_image_btn" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tilDialogTaskText"
            android:layout_alignStart="@+id/tilDialogTaskText"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/btn_image"
            android:layout_toStartOf="@+id/btn_image"
            tool:text="hkhjkh">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogTaskText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilDialogTaskTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            tool:text="hkhjkh">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilDialogTaskText"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogTaskTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tilDialogTaskText"
            android:layout_alignRight="@+id/tilDialogTaskText"
            android:layout_alignTop="@+id/tilDialogTaskDate">

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:inputType="time"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <!--<Spinner-->
        <!--android:id="@+id/spDialogTaskPriority"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/tilDialogTaskDate"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_marginTop="10dp" />-->
    </RelativeLayout>
</ScrollView>
